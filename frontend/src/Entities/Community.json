{
  "name": "Community",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Community name"
    },
    "description": {
      "type": "string"
    },
    "cover_image": {
      "type": "string",
      "description": "Cover image URL"
    },
    "icon": {
      "type": "string",
      "description": "Community icon/emoji"
    },
    "members_count": {
      "type": "number",
      "default": 0
    },
    "category": {
      "type": "string",
      "enum": [
        "Technology",
        "Design",
        "Gaming",
        "Music",
        "Sports",
        "Art",
        "Science",
        "Other"
      ]
    },
    "is_private": {
      "type": "boolean",
      "default": false
    },
    "member_emails": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Array of member email addresses"
    }
  },
  "required": [
    "name"
  ]
}